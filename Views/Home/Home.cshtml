@{
    <section id="hero" class="d-flex flex-column justify-content-center active">
        <div class="container" data-aos="zoom-in" data-aos-delay="100">
            <h1>Kourosh Sajjadi</h1>
            <p>I'm a <span class="typed" data-typed-items="Data Science Student, Mid-Level Software Developer, Junior Blockchain Developer"></span></p>
            <div class="social-links">
                <a href="#" class="twitter" target="_blank"><i class="bx bxl-twitter" alt="Twitter"></i></a>
                <a href="https://www.facebook.com/kourosh.sajjadi1999/" target="_blank" class="facebook"><i class="bx bxl-facebook" alt="Facebook"></i></a>
                <a href="" target="_blank" class="instagram"><i class="bx bxl-instagram" alt="Instagram"></i></a>
                <a href="https://join.skype.com/invite/tLGFXyD8EjVI" target="_blank" class="google-plus"><i class="bx bxl-skype" alt="Skype"></i></a>
                <a href="https://www.linkedin.com/in/kourosh-sajjadi/" target="_blank" class="linkedin"><i class="bx bxl-linkedin" alt="LinkedIn"></i></a>
            </div>
        </div>
    </section>

    <section id="video" class="d-flex flex-column justify-content-center">
        <div class="container" data-aos="fade-up" data-aos-delay="200">
            <h2>My Personal Video</h2>
            <div class="video-preview">
                <img src="path/to/video-preview-image.jpg" alt="Video Preview" />
                <div class="play-button" data-vimeo-id="VIDEO_ID"></div>
            </div>
        </div>
    </section>

    <script>
        /**
        * Home type effect
        */
        const typed = document.querySelector('.typed');
        if (typed) {
            let typed_strings = typed.getAttribute('data-typed-items');
            typed_strings = typed_strings.split(',');
            new Typed('.typed', {
                strings: typed_strings,
                loop: true,
                typeSpeed: 100,
                backSpeed: 50,
                backDelay: 2000
            });
        }
    </script>
}

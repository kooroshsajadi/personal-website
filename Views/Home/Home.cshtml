@{
    <section id="hero" class="d-flex flex-column justify-content-center active">
        <div class="container" data-aos="zoom-in" data-aos-delay="100">
            <h1>Kourosh Sajjadi</h1>
            <p>I'm a <span class="typed" data-typed-items="Data Science Student, Mid-Level Software Developer, Junior Blockchain Developer"></span></p>
            <div class="social-links">
                <a href="https://vimeo.com/831222748/1bb4f07b65" target="_blank" class="vimeo"><i class="bx bxl-vimeo" alt="Vimeo"></i></a>
                <a href="https://www.linkedin.com/in/kourosh-sajjadi/" target="_blank" class="linkedin"><i class="bx bxl-linkedin" alt="LinkedIn"></i></a>
